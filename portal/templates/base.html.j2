<!doctype html>
<html lang="en">

<head>
    {% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">

    {% block styles %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    {% endblock %}

    {% endblock %}
</head>
<nav class="navbar navbar-brand mb-0 navbar-expand-lg navbar-light bg-light" style="margin-left: 15px;"> <span
        class="navbar-brand mb-0 h1">{{ config.get("TITLE")}}</span>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active"> <a class="nav-link" href="{{ url_for('tips.index') }}">Home</a>
            </li>
            <li class="nav-item"> <a class="nav-link" target="_blank" href="https://carlosmoreno.hashnode.dev/">Blog</a>
            </li>
        </ul>
    </div>
</nav>

<body>
    {% block content %}{% endblock %}

    {% block scripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>
    {% endblock %}
    <footer class="footer"
        style="text-align: center; position: fixed; bottom: 0; width: 100%; background-color: #f8f9fa; padding: 10px;">
        <p>Desenvolvido por <strong><em>Carlos Moreno</em></strong></p>
